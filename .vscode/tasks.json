{
	"version": "2.0.0",
	"windows": {
		"options": {
			"shell": {
				"executable": "cmd.exe",
				"args": [
					"/d",
					"/c"
				]
			}
		}
	},
	"tasks": [
		{
			"label": "build",
			"type": "shell",
			"command": "west build -b ${input:board} -d ${workspaceRoot}/build/${input:board}",
			"problemMatcher": {
				"base": "$gcc",
				"fileLocation": "absolute"
			}
		},
		{
			"label": "re-build",
			"type": "shell",
			"command": "west build -p -b ${input:board} -d ${workspaceRoot}/build/${input:board}",
			"problemMatcher": {
				"base": "$gcc",
				"fileLocation": "absolute"
			}
		},
		{
			"label": "flash app",
			"type": "shell",
			"command": "west flash --recover -d ${workspaceRoot}/build/${input:board}",
			"problemMatcher": []
		},
		{
			"label": "clean",
			"type": "shell",
			"command": "west build -t pristine -b ${input:board} -d ${workspaceRoot}/build/${input:board}",
			"problemMatcher": []
		},
		{
			"label": "Run QEMU",
			"type": "shell",
			"command": "west build -t run -b ${input:board} -d ${workspaceRoot}/build/${input:board}",
			"problemMatcher": []
		},
		{
			"label": "PM report",
			"type": "shell",
			"command": "west build -t partition_manager_report -b ${input:board} -d ${workspaceRoot}/build/${input:board}",
			"problemMatcher": []
		},
		{
			"label": "menuconfig",
			"type": "shell",
			"command": "west build -t menuconfig -b ${input:board} -d ${workspaceRoot}/build/${input:board}",
			"problemMatcher": []
		},
		{
			"label": "ram_report",
			"type": "shell",
			"command": "west build -b ${input:board} -d ${workspaceRoot}/build/${input:board} --target ram_report > ${workspaceRoot}/build/${input:board}/ram_report.txt",
			"problemMatcher": []
		},
		{
			"label": "rom_report",
			"type": "shell",
			"command": "west build -b ${input:board} -d ${workspaceRoot}/build/${input:board} --target rom_report > ${workspaceRoot}/build/${input:board}/rom_report.txt",
			"problemMatcher": []
		},
		{
			"label": "puncover",
			"type": "shell",
			"command": "west build -t puncover -b ${input:board} -d ${workspaceRoot}/build/${input:board}",
			"problemMatcher": []
		},
	],
	"inputs": [
		{
			"id": "board",
			"description": "Select a board",
			"default": "pinnacle_100_dvk",
			"type": "pickString",
			"options": [
				"pinnacle_100_dvk",
				"mg100",
				"bl5340_dvk_cpuapp",
				"qemu_cortex_m3"
			]
		}
	]
}